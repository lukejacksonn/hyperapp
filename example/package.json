{
  "name": "example",
  "version": "1.0.0",
  "main": "index.js",
  "watch": {
    "build": {
      "patterns": [
        "../src"
      ],
      "extensions": "js"
    },
    "serve": "package.json"
  },
  "scripts": {
    "static": "copyfiles index.html dist",
    "bundle": "rollup -f iife -i index.js -o dist/index.js",
    "build": "npm run static && npm run bundle",
    "serve": "http-server-spa dist",
    "start": "npm-watch"
  },
  "babel": {
    "presets": "es2015"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "http-server-spa": "^1.2.0",
    "npm-watch": "^0.1.9",
    "rollup": "^0.43.0",
    "copyfiles": "^1.2.0"
  }
}
